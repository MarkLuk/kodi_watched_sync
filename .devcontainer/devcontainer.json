{
  "name": "Antigravity Python Sandbox",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y wget tar coreutils && pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "remoteUser": "vscode"
}
