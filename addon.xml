<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.watched.sync" name="Watched Sync" version="0.1.0" provider-name="Mark Luko">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="script.py">
      <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Synchronize watched status between Kodi instances</summary>
    <description lang="en_GB">Synchronizes watched status and resume points to a central CSV file.</description>
    <platform>all</platform>
    <assets>
        <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
